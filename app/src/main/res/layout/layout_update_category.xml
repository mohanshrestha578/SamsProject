<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/update_category_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            />
        <Button
            android:id="@+id/updateCategory_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_category_name"
            android:layout_toLeftOf="@id/updateCategory_cancleBtn"
            android:text="Update"
            android:onClick="createCategory"
            />
        <Button
            android:id="@+id/updateCategory_cancleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_category_name"
            android:layout_alignRight="@id/update_category_name"
            android:text="Cancle"
            android:onClick="createCategory"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>


</RelativeLayout>