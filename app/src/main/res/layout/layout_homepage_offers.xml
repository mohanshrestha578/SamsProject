<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="290dp"
        android:layout_height="230dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/offer_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ccc"/>

            <RelativeLayout
                android:id="@+id/offer_item_info"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingBottom="0dp"
                android:layout_below="@id/offer_image"
                >

                <TextView
                    android:id="@+id/offer_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Item Name"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/offer_food_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category name"
                    android:layout_below="@id/offer_food_name"/>

                <TextView
                    android:id="@+id/offer_food_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/offer_food_category"
                    android:text="Rs. 850"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/offer_discount_layout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/offer_item_info"
                android:layout_below="@id/offer_image"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/offer_limited_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limited Offer!"
                    android:textSize="12sp"
                    android:textColor="#222"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/offer_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/offer_limited_text"
                    android:text="20% Off"
                    android:background="@drawable/btn_radius"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    />


            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>