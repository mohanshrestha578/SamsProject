<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sales_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jhol Mo:Mo"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sales_view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.120"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/sales_view_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:paddingLeft="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/sales_view_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10% off"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="right"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount amt:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sales_view_disc_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs. 50"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total amt:"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-160dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/sales_view_total_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs. 500"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>