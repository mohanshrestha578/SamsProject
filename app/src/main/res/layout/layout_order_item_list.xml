<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:id="@+id/order_view_imageLayout"
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/order_view_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/radius_img"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/order_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jhol Mo:Mo"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.120"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/order_view_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:paddingLeft="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/order_view_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10% off"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="right"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/order_view_total_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs. 500"/>

        <Button
            android:id="@+id/order_view_delBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>