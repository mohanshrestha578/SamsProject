<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_admin_item_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_marginBottom="1dp"
        android:layout_marginHorizontal="1dp"/>

    <TextView
        android:id="@+id/list_admin_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MoMo"
        android:textStyle="bold"
        android:layout_weight="2"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_marginBottom="1dp"
        android:layout_marginHorizontal="1dp"/>

    <RelativeLayout
        android:id="@+id/list_admin_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 100"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_marginBottom="1dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/list_admin_item_viewBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
            android:layout_toLeftOf="@+id/list_admin_item_editBtn"
            />

        <Button
            android:id="@+id/list_admin_item_editBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/list_admin_item_delBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            android:layout_toRightOf="@id/list_admin_item_editBtn"
            />

    </RelativeLayout>

</TableRow>