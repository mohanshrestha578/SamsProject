<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/rc_dish_image_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/recommend_dish_image"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    android:background="@drawable/radius_img"
                    android:layout_centerHorizontal="true"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/recommend_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Mo:Mo"
                android:gravity="center"
                android:textColor="#333"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_below="@id/rc_dish_image_cv"
                />

            <TextView
                android:id="@+id/recommend_dish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.120"
                android:textSize="12dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="16sp"
                android:layout_below="@id/recommend_dish_name"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="-3dp"
                android:layout_marginStart="5dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>